    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,400;0,500;0,600;0,700;1,400&family=Karla:ital,wght@0,300;0,400;0,500;0,600;0,700;1,400&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #2c3e50;
            --text-color: #34495e;
            --light-gray: #f8f9fa;
            --border-color: #e9ecef;
            --sidebar-width: 240px; 
            --base-font-size: 13pt;
        }
        
        body {
            font-family: 'Karla', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
            line-height: 1.7;
            color: var(--text-color);
            margin: 0;
            padding: 0;
            font-size: var(--base-font-size);
        }
        
        .container {
            display: flex;
            max-width: 1200px;
            margin: 0 auto;
            gap: 3rem;
            padding: 2rem;
        }
        
        /* Sidebar */
        .sidebar {
            width: var(--sidebar-width);
            flex-shrink: 0;
            position: sticky;
            top: 2rem;
            height: fit-content;
        }
        
        .back-link {
            color: #7f8c8d;
            text-decoration: none;
            font-size: 0.9rem;
            margin-bottom: 2rem;
            display: block;
            font-family: 'Karla', sans-serif;
        }
        
        .back-link:hover {
            color: var(--primary-color);
        }

        
        
        .toc {
            border-radius: 8px;
            padding: 1.5rem;
        }
        
        .toc h3 {
            margin: 0 0 1rem 0;
            font-size: 0.9rem;
            font-weight: 600;
            color: var(--primary-color);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-family: 'Montserrat', sans-serif;
        }
        
        .toc ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        
        .toc li {
            margin-bottom: 0.5rem;
        }
        
        .toc a {
            color: var(--text-color);
            text-decoration: none;
            font-size: 0.9rem;
            padding: 0.25rem 0;
            display: block;
            border-radius: 4px;
            transition: all 0.2s ease;
            font-family: 'Karla', sans-serif;
        }
        
        .toc a:hover {
            color: var(--primary-color);
            background-color: rgba(44, 62, 80, 0.1);
            padding-left: 0.5rem;
        }

        /* Active TOC link styling */
        .toc a.active {
            color: var(--primary-color);
            background-color: rgba(44, 62, 80, 0.15);
            padding-left: 0.75rem;
            font-weight: 500;
            border-left: 3px solid var(--primary-color);
        }
        /* Smooth transition for TOC links */
        .toc a {
            transition: all 0.3s ease;
            border-left: 3px solid transparent;
        }
        
        /* Main Content */
        .main-content {
            flex: 1;
            min-width: 0;
            max-width: 760px;
        }
        
        .project-header {
            margin-bottom: 3rem;
        }
        
        .project-header h1 {
            font-family: 'Montserrat', sans-serif;
            font-size: 2.5rem;
            font-weight: 400;
            margin-bottom: 1rem;
            color: var(--primary-color);
            line-height: 1.2;
        }
        
        .project-meta {
            display: flex;
            gap: 2rem;
            margin-bottom: 2rem;
            font-size: 0.9rem;
            color: #7f8c8d;
            flex-wrap: wrap;
            font-family: 'Karla', sans-serif;
        }
        
        .project-summary {
            font-size: .9rem;
            color: #5d6d7e;
            margin-bottom: 3rem;
            border-radius: 8px;
            font-family: 'Karla', sans-serif;
        }
        
        .content-section {
            margin-bottom: 3rem;
        }
        
        .content-section h2 {
            font-family: 'Montserrat', sans-serif;
            color: var(--primary-color);
            font-weight: 500;
            margin-bottom: 1.5rem;
            font-size: 1.8rem;
            scroll-margin-top: 2rem;
        }
        
        .content-section h3 {
            font-family: 'Montserrat', sans-serif;
            color: var(--text-color);
            font-weight: 500;
            margin-top: 2rem;
            margin-bottom: 1rem;
            scroll-margin-top: 2rem;
            font-size: 1.3rem;
        }
        
        .content-section p {
            font-family: 'Karla', sans-serif;
            font-size: var(--base-font-size);
            margin-bottom: 1.5rem;
        }
        
        .content-section ul, .content-section ol {
            font-family: 'Karla', sans-serif;
            font-size: var(--base-font-size);
            margin-bottom: 1.5rem;
        }
        
        .content-section li {
            margin-bottom: 0.5rem;
        }
        
        .highlight-box {
            background-color: var(--light-gray);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            padding: 1.5rem;
            margin: 2rem 0;
        }
        
        .highlight-box h3 {
            margin-top: 0;
        }
        
        .highlight-box p, .highlight-box ul {
            font-family: 'Karla', sans-serif;
            font-size: var(--base-font-size);
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 1rem;
            margin: 2rem 0;
        }
        
        .stat-item {
            text-align: center;
            padding: 1.5rem;
            background-color: var(--light-gray);
            border-radius: 8px;
            border: 1px solid var(--border-color);
        }
        
        .stat-number {
            font-family: 'Montserrat', sans-serif;
            font-size: 2rem;
            font-weight: 300;
            color: var(--primary-color);
            display: block;
        }
        
        .stat-label {
            font-family: 'Karla', sans-serif;
            font-size: 0.9rem;
            color: #7f8c8d;
            margin-top: 0.5rem;
        }
        
        .image-placeholder {
            background-color: var(--light-gray);
            border: 2px dashed var(--border-color);
            border-radius: 8px;
            padding: 3rem;
            text-align: center;
            color: #7f8c8d;
            margin: 2rem 0;
            font-family: 'Karla', sans-serif;
        }

        /* Thumbnail styling */
        .thumbnail {
            cursor: pointer;
            transition: all 0.3s ease;
            border-radius: 8px;
            overflow: hidden;
            position: relative;
            display: inline-block;
            width: 100%;
            margin-bottom: 1rem;
        }

        .thumbnail:hover {
            transform: scale(1.02);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .thumbnail img {
            width: 100%;
            height: auto;
            display: block;
            transition: all 0.3s ease;
            border-radius: 8px;
        }

        .thumbnail:hover img {
            filter: brightness(1.1);
        }

        /* Fullscreen modal */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.95);
            animation: fadeIn 0.3s ease;
        }

        .modal.active {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            padding: 2rem;
        }

        .modal-content {
            max-width: 90vw;
            max-height: 80vh;
            object-fit: contain;
            border-radius: 8px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
        }

        .modal-caption {
            color: white;
            font-family: 'Karla', sans-serif;
            font-size: 1.1rem;
            text-align: center;
            margin-top: 1.5rem;
            max-width: 600px;
            line-height: 1.6;
            padding: 0 1rem;
        }

        .modal-close {
            position: absolute;
            top: 2rem;
            right: 2rem;
            color: white;
            font-size: 2rem;
            font-weight: 300;
            cursor: pointer;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            background-color: rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
            border: none;
            font-family: 'Montserrat', sans-serif;
        }

        .modal-close:hover {
            background-color: rgba(255, 255, 255, 0.2);
            transform: scale(1.1);
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        
        .navigation {
            display: flex;
            justify-content: space-between;
            margin-top: 4rem;
            padding-top: 2rem;
            border-top: 1px solid var(--border-color);
        }
        
        .nav-link {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
            font-family: 'Karla', sans-serif;
        }
        
        .nav-link:hover {
            text-decoration: underline;
        }

        /* Mobile Responsive */
        @media (max-width: 768px) {
            .container {
                flex-direction: column;
                padding: 1rem;
                gap: 2rem;
            }
            
            .sidebar {
                width: 100%;
                position: static;
                order: 2;
            }
            
            .main-content {
                order: 1;
            }
            
            .project-header h1 {
                font-size: 2rem;
            }
            
            .project-meta {
                flex-direction: column;
                gap: 0.5rem;
            }

            /* Mobile responsive for modal */
            .modal-content {
                max-width: 95vw;
                max-height: 70vh;
            }
            
            .modal-close {
                top: 1rem;
                right: 1rem;
                width: 35px;
                height: 35px;
                font-size: 1.5rem;
            }
            
            .modal-caption {
                font-size: 1rem;
                margin-top: 1rem;
            }
        }
    </style>
