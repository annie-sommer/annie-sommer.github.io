    <style>
        :root {
            --primary-color: #2c3e50;
            --text-color: #34495e;
            --light-gray: #f8f9fa;
            --border-color: #e9ecef;
            --sidebar-width: 240px; 
            --base-font-size: 14px;
        }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
            line-height: 1.7;
            color: var(--text-color);
            margin: 0;
            padding: 0;
            font-size: var(--base-font-size);
        }
        
        .container {
            display: flex;
            max-width: 1200px;
            margin: 0 auto;
            gap: 3rem;
            padding: 2rem;
        }
        
        /* Sidebar */
        .sidebar {
            width: var(--sidebar-width);
            flex-shrink: 0;
            position: sticky;
            top: 2rem;
            height: fit-content;
        }
        
        .back-link {
            color: #7f8c8d;
            text-decoration: none;
            font-size: 0.9rem;
            margin-bottom: 2rem;
            display: block;
            font-family: 'Karla', sans-serif;
        }
        
        .back-link:hover {
            color: var(--primary-color);
        }

        
        
        .toc {
            border-radius: 8px;
            padding: 1.5rem;
        }
        
        .toc h3 {
            margin: 0 0 1rem 0;
            font-size: 0.9rem;
            font-weight: 600;
            color: var(--primary-color);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-family: 'Montserrat', sans-serif;
        }
        
        .toc ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        
        .toc li {
            margin-bottom: 0.5rem;
        }
        
        .toc a {
            color: var(--text-color);
            text-decoration: none;
            font-size: 0.9rem;
            padding: 0.25rem 0;
            display: block;
            border-radius: 4px;
            transition: all 0.2s ease;
            font-family: 'Karla', sans-serif;
        }
        
        .toc a:hover {
            color: var(--primary-color);
            background-color: rgba(44, 62, 80, 0.1);
            padding-left: 0.5rem;
        }

        /* Active TOC link styling */
        .toc a.active {
            color: var(--primary-color);
            background-color: rgba(44, 62, 80, 0.15);
            padding-left: 0.75rem;
            font-weight: 500;
            border-left: 3px solid var(--primary-color);
        }
        /* Smooth transition for TOC links */
        .toc a {
            transition: all 0.3s ease;
            border-left: 3px solid transparent;
        }
        
        /* Main Content */
        .main-content {
            flex: 1;
            min-width: 0;
            max-width: 760px;
        }
        
        .project-header {
            margin-bottom: 3rem;
        }
        
        .project-header h1 {
            font-family: 'Newsreader', serif;
            font-size: 2.5rem;
            font-weight: 400;
            margin-bottom: 1rem;
            color: var(--primary-color);
            line-height: 1.2;
        }
        
        .project-meta {
            display: flex;
            gap: 2rem;
            margin-bottom: 2rem;
            font-size: 0.9rem;
            color: #7f8c8d;
            flex-wrap: wrap;
            font-family: 'Inter', sans-serif;
        }
        
        .project-summary {
            font-size: .9rem;
            color: #5d6d7e;
            margin-bottom: 3rem;
            border-radius: 8px;
            font-family: 'Inter', sans-serif;
        }
        
        .content-section {
            margin-bottom: 3rem;
        }
        
        .content-section h2 {
            font-family: 'Newsreader', serif;
            color: var(--primary-color);
            font-weight: 500;
            margin-bottom: 1.5rem;
            font-size: 1.8rem;
            scroll-margin-top: 2rem;
        }
        
        .content-section h3 {
            font-family: 'Newsreader', serif;
            color: var(--text-color);
            font-weight: 500;
            margin-top: 2rem;
            margin-bottom: 1rem;
            scroll-margin-top: 2rem;
            font-size: 1.3rem;
        }
        
        .content-section p {
            font-family: 'Inter', sans-serif;
            font-size: var(--base-font-size);
            margin-bottom: 1.5rem;
        }
        
        .content-section ul, .content-section ol {
            font-family: 'Inter', sans-serif;
            font-size: var(--base-font-size);
            margin-bottom: 1.75rem;
        }
        
        .content-section li {
            margin-bottom: 0.5rem;
        }
        
        .highlight-box {
            background-color: var(--light-gray);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            padding: 1.5rem;
            margin: 2rem 0;
        }
        
