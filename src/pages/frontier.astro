                flex-direction: column;
                padding: 1rem;
                gap: 2rem;
            }
            
            .sidebar {
                width: 100%;
                position: static;
                order: 2;
            }
            
            .main-content {
                order: 1;
            }
            
            .project-header h1 {
                font-size: 2rem;
            }
            
            .project-meta {
                flex-direction: column;
                gap: 0.5rem;
            }

            /* Mobile responsive for modal */
            .modal-content {
                max-width: 95vw;
                max-height: 70vh;
            }
            
            .modal-close {
                top: 1rem;
                right: 1rem;
                width: 35px;
                height: 35px;
                font-size: 1.5rem;
            }
            
            .modal-caption {
                font-size: 1rem;
                margin-top: 1rem;
            }
        }
    </style>
