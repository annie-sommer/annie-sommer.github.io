                box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05);
                height: fit-content;
            }

            .case-study-item {
                margin-bottom: 2rem;
                padding-bottom: 2rem;
                border-bottom: 1px solid #eee;
            }

            .case-study-item:last-child {
                border-bottom: none;
                margin-bottom: 0;
                padding-bottom: 0;
            }

            .case-study-title {
                font-family: 'Newsreader', serif;
                font-size: 1.1rem;
                font-weight: 600;
                color: #1a1a1a;
                margin-bottom: 0.5rem;
            }

            .case-study-description {
                font-size: 0.9rem;
                color: #666;
                margin-bottom: 0.8rem;
