	<style>
	body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
    background: #fafafa;
    color: var(--text-color);
    line-height: 1.7;
    font-size: var(--base-font-size);
}

.main-heading {
    font-family: 'Newsreader', serif;
    font-size: 3.5rem;
    font-weight: 400;
    font-style: italic;
    color: var(--primary-color);
    margin-bottom: 1rem;
    line-height: 1.2;
}

.subheading {
    font-size: 1.2rem;
    color: #7f8c8d;
    font-weight: 400;
    margin-bottom: 3rem;
}

.executive-summary h2 {
    font-family: 'Newsreader', serif;
    font-size: 1.8rem;
    font-weight: 500;
    margin-bottom: 1.5rem;
    color: var(--primary-color);
}

.executive-summary p {
    margin-bottom: 1.5rem;
    color: var(--text-color);
    font-size: var(--base-font-size);
}

.case-study-title {
    font-family: 'Newsreader', serif;
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--primary-color);
    margin-bottom: 0.5rem;
}

.case-study-description {
    font-size: 0.9rem;
    color: #7f8c8d;
    margin-bottom: 0.8rem;
    line-height: 1.5;
}

.tabs-header {
    font-family: 'Newsreader', serif;
    font-size: 2rem;
    font-weight: 500;
    color: var(--primary-color);
    margin-bottom: 2rem;
    text-align: left;
}

.tab-button {
    background: #e8e9ea;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 25px;
    font-family: 'Inter', sans-serif;
    font-size: 0.9rem;
    font-weight: 500;
    color: #7f8c8d;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.tab-button:hover {
    background: #d0d1d2;
}

.tab-button.active {
    background: var(--primary-color);
    color: white;
}

.card-title {
    font-family: 'Newsreader', serif;
    font-size: 1.2rem;
    font-weight: 500;
    color: var(--primary-color);
    margin-bottom: 0.5rem;
}

.card-description {
    font-size: 0.95rem;
    color: var(--text-color);
    line-height: 1.5;
}

.page-number {
    font-size: 0.85rem;
    color: #7f8c8d;
    text-align: right;
}
.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
}

.tabs-section {
    margin: 3rem 0;
}

.cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 0;
}

.card-content {
    padding: 1.5rem;
}

.case-study-item {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border-color);
}

.case-studies-sidebar {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05);
    height: fit-content;
}

@media (max-width: 768px) {
    .container {
        flex-direction: column;
        padding: 1rem;
        gap: 2rem;
    }
    
    .tabs-section {
        margin: 2rem 0;
    }
}
</style>
