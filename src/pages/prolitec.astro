        .content-section li {
            margin-bottom: 0.5rem;
        }
        
        .highlight-box {
            background-color: var(--light-gray);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            padding: 1.5rem;
            margin: 2rem 0;
        }
        
        .highlight-box h3 {
            margin-top: 0;
        }
        
        .highlight-box p, .highlight-box ul {
            font-family: 'Inter', sans-serif;
            font-size: var(--base-font-size);
